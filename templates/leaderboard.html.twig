{% extends 'base.html.twig' %}
{% set currentPage = 'leaderboard' %}
{% set page_files = [currentPage] %}
{% set title = 'Leaderboard' %}
{% block content %}
    <section id="leaderboard">
        <table>
            <caption>Leaderboard of the {{ bestUsers | length }} best users</caption>
            <thead>
                <tr>
                    <th>Position</th>
                    <th>Username</th>
                    <th>Inventory Value</th>
                    <th>Inventory Size</th>
                </tr>
            </thead>
            <tbody>
                {% for user in bestUsers %}
                    <tr data-url="/user/{{ user.userID }}">
                        <td>{{ loop.index }}</td>
                        <td>{% if user.premium == 'activated' %}â˜…{% endif %}{{ user.username }}</td>
                        <td>${{ user.inventoryValue }}</td>
                        <td>{{ user.inventorySize }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
